generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id             String           @id
  email          String
  password       String?
  displayName    String
  profileUrl     String
  provider       AuthProvider
  createdAt      Int              @db.UnsignedInt
  session        Session[]
  userPermission UserPermission[]
  Organization   Organization[]
}

enum AuthProvider {
  SELF
  GOOGLE
}

model Session {
  id        String @id
  user      User   @relation(fields: [userId], references: [id])
  userId    String
  ipAddress String
  userAgent String
  expiryAt  Int    @db.UnsignedInt
  createdAt Int    @db.UnsignedInt
}

model Organization {
  id      Int    @id @default(autoincrement())
  name    String
  owner   User   @relation(fields: [ownerId], references: [id])
  ownerId String
}

model Workspace {
  id      Int    @id @default(autoincrement())
  name    String
  ownerId String // Can be the User or Organization
}

model Privilege {
  name        String @id
  description String
  permission  String @unique
}

model Role {
  name       String @id
  permission String
}

model UserPermission {
  user         User   @relation(fields: [userId], references: [id])
  userId       String
  organization String
  workspace    String
  permission   String

  @@id([userId, organization, workspace, permission])
}
